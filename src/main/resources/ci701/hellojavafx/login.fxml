<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ci701.hellojavafx.LoginController"
            prefHeight="500.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Title -->
        <Text text="Login" styleClass="title"/>

        <!-- Login Form -->
        <VBox spacing="15" styleClass="form-container">

            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="Enter username"
                           styleClass="text-field"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter password"
                               styleClass="text-field"/>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" maxWidth="Infinity"
                    styleClass="login-button" onAction="#handleLogin"/>

            <!-- Forgot Password Link -->
            <Hyperlink text="Forgot Password?" styleClass="link"
                       onAction="#handleForgotPassword"/>

        </VBox>

        <!-- Sign Up Section -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" styleClass="signup-text"/>
            <Hyperlink text="Sign Up" styleClass="link"
                       onAction="#handleSignUp"/>
        </HBox>

    </VBox>

</AnchorPane>